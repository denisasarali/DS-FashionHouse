@using CasadeModa.Models
@model List<DetaliiFactura>
@{
    ViewBag.Title = "DetaliiFactura";
    Layout = "~/Views/Shared/_LayoutPublicPage.cshtml";
}

@{
    Factura info = (Factura)@Session["informatii"];
}

<div class="container" style="padding: 50px 0">
    <h4 class="mb-3 text-dark text-uppercase">Comanda / #@ViewBag.idfactura</h4>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">Produs</th>
                                <th scope="col" class="text-center">Cantitate</th>
                                <th scope="col" class="text-center">Pret</th>
                                <th scope="col" class="text-center">Total </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int nr = 1, total = 0, totalprice = 0;}
                            @foreach (var i in Model)
                            {

                            <tr>
                                <td width="400px">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img src=@Url.Content("" + i.Produ.Imagine) width="80%" />
                                        </div>
                                        <div class="col-md-9">
                                            @i.Produ.NumeProdus
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">@i.CantitateProdus</td>
                                <td class="text-center">@i.Produ.Pret</td>
                                <td class="text-center">@i.PretTotal</td>

                            </tr>
                                nr++;
                                total += (int)i.PretTotal;

                            }
                            @{ totalprice = total; }
                        </tbody>
                    </table>

                    <hr />
                    <div class="row">
                        <div class="col-md-6">

                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6 text-right">
                                    <p>Subtotal:</p>
                                    <p>Transport:</p>
                                    <p><b>Total:</b></p>
                                </div>
                                <div class="col-md-6 text-right">
                                    <p>@totalprice</p>
                                    <p>0</p>

                                    <p>@total</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 style="margin-bottom: 25px">Informatii destinatar</h4>
                    <p style="margin: 0">
                        <b>
                            @info.Membru.Prenume<span> </span>@info.Membru.Nume
                        </b>
                    </p>
                    <p style="margin: 0">
                        @info.Membru.Telefon
                    </p>
                    <p style="margin: 0">
                        @info.Membru.Adresa

                    </p>
                </div>
            </div>
        </div>
    </div>



</div>


