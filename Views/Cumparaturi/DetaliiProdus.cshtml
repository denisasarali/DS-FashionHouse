<!-- detalii produs -->
<section class="shop-details">
    <div class="product__details__pic">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__breadcrumb">
                        <a href="~/Home/Index">Home</a>
                        <a href="./cumparaturi.html">Cumpara</a>
                        <span>Detalii produs</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg=@Url.Content(""+@Model.Imagine)>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg=@Url.Content(""+@Model.Imagine)>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg=@Url.Content(""+@Model.Imagine)>
                                </div>
                            </a>
                        </li>

                    </ul>
                </div>
                <div class="col-lg-6 col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src=@Url.Content(""+@Model.Imagine) alt="">
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src=@Url.Content(""+@Model.Imagine) alt="">
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src=@Url.Content(""+@Model.Imagine) alt="">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="product__details__content">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="product__details__text">
                        <h4>@Model.NumeProdus</h4>

                        <h3>@Model.Pret lei</h3>
                        <p>
                            @Model.Descriere
                        </p>
                        <div class="product__details__option">
                            <div class="product__details__option__size">
                                <span>Size:</span>
                                @*<label for="l">
            L
            <input type="radio" id="l">
        </label>
        <label class="active" for="m">
            M
            <input type="radio" id="m">
        </label>
        <label for="s">
            S
            <input type="radio" id="s">
        </label>
        <label for="xs">
            XS
            <input type="radio" id="xs">
        </label>*@

                                <label for="L">
                                    L
                                    <input type="radio" id="L" name="marime">
                                </label>
                                <label class="active" for="M" name="marime">
                                    M
                                    <input type="radio" id="M" name="marime" checked>
                                </label>
                                <label for="S">
                                    S
                                    <input type="radio" id="S" name="marime">
                                </label>
                                <label for="XS">
                                    XS
                                    <input type="radio" id="XS" name="marime">
                                </label>
                                <p id="textmarime"></p>
                                @*<a href="javascript: marime()">Schimba marimea</a>*@
                                <script>
                                    function marime() {
                                        var marime = document.querySelector('input[name="marime"]:checked').id.toString();
                                        /* var culoare = document.querySelector('input[name="culoare"]:checked').id.toString();*/
                                        document.getElementById("textmarime").innerHTML = marime;
                                    }
                                </script>

                                <p id="textculoare"></p>
                                @*<a href="javascript: culoare()">Schimba culoarea</a>*@
                                <script>
                                    function culoare() {
                                        /*var marime = document.querySelector('input[name="marime"]:checked').id.toString();*/
                                         var culoare = document.querySelector('input[name="culoare"]:checked').id.toString();
                                        document.getElementById("textculoare").innerHTML =  culoare;
                                    }
                                </script>
                                @*<a href="@Url.Action("AdaugaInCos","CosCumparaturi", new { marime = Model.IdMarime, @strURL = Request.Url.ToString() })" class="primary-btn">Adauga in cos</a>*@


                            </div>
                            <div class="product__details__option__color">
                                <span>Color:</span>
                                <label class="c-1" for="negru">
                                    <input type="radio"  id="negru" name="culoare">
                                </label>
                                <label class="c-2" for="albastru">
                                    <input type="radio" id="albastru" name="culoare">
                                </label>
                                <label class="c-3" for="galben">
                                    <input type="radio" id="galben" name="culoare" >
                                </label>
                                <label class="c-4" for="rosu">
                                    <input type="radio" id="rosu" name="culoare"> 
                                </label>
                                <label class="active" for="roz">
                                    <input type="radio" id="roz" name="culoare">
                                </label>
                            </div>
                        </div>
                        <div class="product__details__cart__option">
                            <div class="quantity">
                                <div class="pro-qty">
                                    <input type="text" value="1">
                                </div>
                            </div>

                            <script>
                                function addToCart(){
                                    var selectedMarime = document.querySelector('input[name="marime"]:checked').id.toString();
                                    var selectedCuloare = document.querySelector('input[name="culoare"]:checked').id.toString();
                                    var url = window.location.href;
                                    console.log(url);
                                    window.location = "/CosCumparaturi/AdaugaInCos/" + @Model.IdProdus + "?marime=" + selectedMarime + "&culoare=" + selectedCuloare +  "&strURL=" + url;
                                }
                                </script>

                            <a href="#" class="primary-btn" onclick="addToCart()">Adauga in cos</a>
                            @*<a href="@Url.Action("AdaugaInCos","CosCumparaturi", new { id = Model.IdProdus, @strURL = Request.Url.ToString() })" class="primary-btn">Adauga in cos</a>*@

                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-5"
                                   role="tab">Descriere</a>
                            </li>


                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-5" role="tabpanel">
                                <div class="product__details__tab__content">
                                    <div class="product__details__tab__content__item">
                                        @Html.Raw(Model.Descriere)
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
